{
    "compilerOptions": {
        "outDir": "dist",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "components/*": ["./app/src/components/*"],
            "src/*": ["./app/src/*"],
            "src/styles*": ["./app/src/styles/*"]
        }
    },
    "include": ["./app/**/*"]
}